<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Employees</h2>
    <table id="EmpsList" class="table-list">
        <thead>
        <tr>
            <th>First name</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Options</th>
        </tr>
        </thead>
        <tbody>
        <% for (let emp of emps){ %>
            <tr>
                <td data-label="First Name"><%= emp.firstName %></td>
                <td data-label="Lastname"><%= emp.lastName %></td>
                <td data-label="Email"><%= emp.email %></td>
                <td data-label="Phone number"><%= emp.phoneNumber %></td>
                <td>
                    <ul class="list-actions">
                        <li><a href="/employees/details/<%= emp.idEmployee %>" class="list-actions-button-details">Details</a>
                        </li>
                        <li><a href="/employees/delete/<%= emp.idEmployee %>" class="list-actions-button-delete"
                               onclick="return confirm('Are you sure?')">Delete</a></li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <p><a href="/employees/add" class="button-add"> Add new employee </a></p>
</main>
<%- include('../../fragments/footer.ejs') %>