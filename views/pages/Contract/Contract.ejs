<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Contracts</h2>
    <table id="ContractsList" class="table-list">
        <thead>
        <tr>
            <th>Description</th>
            <th>Start date</th>
            <th>Due date</th>
            <th>Options</th>
        </tr>
        </thead>
        <tbody>
        <%for(let cont of conts){%>
        <tr>
            <td data-label="Description"><%=cont.description%></td>
            <td data-label="Start date"><%=cont.startDate.toISOString().split('T')[0]%></td>
            <td data-label="Due date"><%=(cont.dueDate==null || cont.dueDate == '') ? '' : cont.dueDate.toISOString().split('T')[0]%></td>
            <td>
                <ul class="list-actions">
                    <li><a href="/contracts_departments/details/<%=cont.idContract%>" class="list-actions-button-details">Details</a></li>
                    <li><a href="/contracts_departments/delete/<%=cont.idContract%>" class="list-actions-button-delete"
                           onclick="return confirm('Are you sure?')">Delete</a></li>
                </ul>
            </td>
        </tr>
        <%}%>
        </tbody>
    </table>
    <p><a href="/contracts_departments/add" class="button-add"> Add new contract </a></p>
</main>
<%- include('../../fragments/footer.ejs') %>