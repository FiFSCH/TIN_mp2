<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Add new contract</h2>
    <form class="form" onsubmit="return validateForm()" novalidate>
        <label for="desc">Description: <span class="required-field">*</span></label>
        <input type="text" id="desc" name="desc" placeholder="Description" required>
        <span id="errorDescription" class="errors-text"></span>
        <label for="startDate">Start date: <span class="required-field">*</span></label>
        <input type="date" id="startDate" name="startDate" required>
        <span id="errorStartDate" class="errors-text"></span>
        <label for="dueDate">Due date: </label>
        <input type="date" id="dueDate" name="dueDate">
        <span id="errorDueDate" class="errors-text"></span>
        <label for="deptContName">Responsible departments: <span class="required-field">*</span></label>
        <select name="deptContName" id="deptContName" required multiple>
            <option disabled selected value="">--Select departments--</option>
            <option value="dept1">Dept1</option>
            <option value="dept2">Dept2</option>
            <option value="dept3">Dept3</option>
        </select>
        <span id="errorDeptContName" class="errors-text"></span>
        <div class="form-buttons">
            <input type="submit" value="Add" class="button-submit">
            <a href="../Contract/Contract.ejs" class="button-cancel">
                Cancel
            </a>
        </div>
    </form>

</main>
<script type="application/javascript" src="../../../public/JS/ValidationCommon.js"></script>
<script type="application/javascript" src="../../../public/JS/ValidationContract.js"></script>
<%- include('../../fragments/footer.ejs') %>